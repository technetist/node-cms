<div class="col-sm-12">
    <h1>Create Post</h1>
    <form action="#" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title {{#if errors.title }}<span class="text-danger px-3">{{errors.title}}</span>{{/if}}</label>
            <input type="text" id="title" name="title" class="form-control" placeholder="Enter Title">
        </div>

        <div class="form-group">
            <label for="postImage">Image</label>
            <input type="file" id="postImage" name="postImage" class="form-control-file">
        </div>

        <div class="form-group">
            <label for="status">Status</label>
            <select name="status" id="status" class="form-control">
                <option value="0">Hidden</option>
                <option value="1">Published</option>
                <option value="2" selected>Draft</option>
            </select>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" id="allowComments" name="allowComments" class="form-check-input">
                <label for="allowComments" class="form-check-label">Allow Comments</label>
            </div>
        </div>

        <div class="form-group">
            <label for="body">Body {{#if errors.body }}<span class="text-danger px-3">{{errors.body}}</span>{{/if}}</label>
            <textarea id="body" name="body" class="form-control" rows="5"></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
